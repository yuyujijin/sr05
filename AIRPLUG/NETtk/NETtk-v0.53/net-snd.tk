### SENDING MODULE ##############################################################

APG_vrb_dispnotif "  Loading bas-snd.tk (sending module)" "bas-snd" 3

### 1. MODULE VARIABLES #########################################################
set NET_snd_msg $APG_msg_unknown
set NET_snd_app $APG_msg_unknown


### 2. MODULE GUI ###############################################################
labelframe .netsnd -pady 2 -padx 2 \
    -text "Emission \[$APP, ident = $APG_ident\]" -fg $APG_int_coltitle

label .netsnd.t1 -text "Dernier message Ã©mis vers "
label .netsnd.app -textvariable NET_snd_app -width 4 -fg $APG_int_colmsgsnd
label .netsnd.t2 -text " : "
label .netsnd.msg -textvariable NET_snd_msg -width 64  -fg $APG_int_colmsgsnd -anchor w
pack .netsnd.t1 .netsnd.app .netsnd.t2 .netsnd.msg -side left -fill y -pady 2

# affichage des sous-zones de la zone snd
pack .netsnd.msg .netsnd.app -side left -fill y -pady 2



